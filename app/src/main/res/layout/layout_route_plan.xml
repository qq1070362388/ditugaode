    <LinearLayout
        android:id="@+id/sheet_head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/space08">

        <TextView
            android:layout_width="35dp"
            android:layout_height="@dimen/space04"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space06"
            android:background="@drawable/shape_bg_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space04"
            android:layout_marginTop="@dimen/space08"
            android:layout_marginRight="@dimen/space04"
