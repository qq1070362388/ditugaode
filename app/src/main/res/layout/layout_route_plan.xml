            <LinearLayout
                android:id="@+id/path_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="@string/route_plan_default"
                    android:textColor="@color/poi_detail_title" />

                <TextView
                    android:id="@+id/path_general_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/poi_detail_title"
                    android:textSize="@dimen/font18"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/path_general_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:textColor="@color/poi_detail_title"
                    android:textSize="@dimen/font18"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/path_layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space08"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="@string/route_plan_plan2"
                    android:textColor="@color/poi_detail_title" />

                <TextView
                    android:id="@+id/path_general_time1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/poi_detail_title"
                    android:textSize="@dimen/font18"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/path_general_distance1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:textColor="@color/poi_detail_title"
                    android:textSize="@dimen/font18"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/path_layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space08"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="@string/route_plan_plan3"
                    android:textColor="@color/poi_detail_title" />

                <TextView
                    android:id="@+id/path_general_time2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/poi_detail_title"
                    android:textSize="@dimen/font18"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/path_general_distance2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:textColor="@color/poi_detail_title"
                    android:textSize="@dimen/font18"
